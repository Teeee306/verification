name: Test Polymarket Markets

on:
  workflow_dispatch: # allows manual trigger

jobs:
  test-market:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: 20
      - name: Install dependencies
        run: npm install
      - name: Run verifyMarkets
        run: node verifyMarkets.js
